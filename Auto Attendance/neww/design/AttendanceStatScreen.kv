#:import get_color_from_hex kivy.utils.get_color_from_hex
<AttendanceStatScreen>:
    name: "attendanceStatScreen"
    BoxLayout: 
        orientation: 'vertical'   
        Label:
            size:0.5 * root.width, 0.1 * root.height 
            text:"Today's Stats"
            # pos_hint: {"top": 1}
            size_hint: 1, 0.15

        BoxLayout:
            id: analyticsBox
            spacing: '20dp'
            padding: '20dp'
        

        MDFloatLayout:       
            size_hint: 1, .2 
            MDFillRoundFlatButton:
                text: "Back"
                font_size: 25
                size_hint: None,None
                # size:0.5 * root.width, 0.1 * root.height
                # pos:0 * root.width,  0 * root.height
                pos_hint: {"center_x":.4,"center_y":.4}
                on_press: 
                    root.backButton()
                    root.manager.transition.direction = "right"
               
            MDFillRoundFlatButton:
                text: "Exit"
                font_size: 25
                size_hint: None,None
                # size:0.5 * root.width, 0.1 * root.height
                # pos:0 * root.width,  0 * root.height
                pos_hint: {"center_x":.6,"center_y":.4}
                on_press: app.stop()
                # on_release: 
                #     app.root.current = "CurrentAnalytics"
                #     root.manager.transition.direction = "left"