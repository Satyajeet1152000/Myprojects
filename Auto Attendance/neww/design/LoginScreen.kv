<LoginScreen>:
    name: 'loginScreen'
    email: email
    password: password
    errorLabel: errorLabel
    MDBoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            size_hint: .5, 1
            pos_hint: {"center_x": .5 , "center_y": .5}
            MDCard:
                size_hint: 1, .8
                pos_hint: {"center_x": .5, "center_y": .5}
            
            MDIcon:
                icon: "account-circle"         
                pos_hint: {"center_x":.92, "center_y":.8}
                # size_hint: .6,.09
                font_size: 80
                color: 0,1,1,1
                
            MDLabel:
                text: 'Hey, Login Now.'
                pos_hint: {"center_x": .5 , "center_y": .65}
                size_hint_x: .8
                halign: "left"
                # font_name: ""
                font_size: "26sp"

            MDTextField:
                id: email
                hint_text: 'Email'
                mode: "rectangle"
                icon_left: "email"
                size_hint: .8, .09
                pos_hint: {"center_x": .5 , "center_y": .55}
                height: self.minimum_height
                multiline: False
                font_size: "18sp"
                on_focus: errorLabel.text=""

            MDTextField:
                id: password
                hint_text: 'Password'
                mode: "rectangle"
                icon_left: 'key-variant'
                icon_right: 'eye-off'
                size_hint: .8, .09
                pos_hint: {"center_x": .5 , "center_y": .43}
                height: self.minimum_height
                multiline: False
                password: True
                font_size: "18sp"
                on_focus: errorLabel.text=""

            MDTextButton: 
                text: "Forgot Password?"
                # font_name: ""
                theme_text_color: "Custom"
                text_color: rgba(168,168,168,255)
                font_size: "14sp"
                size_hint: .8, .09
                pos_hint: {"center_x": .48 , "center_y": .33}

            Button:
                text: "Login"
                # font_name: ""
                size_hint: .8, .09
                pos_hint: {"center_x": .5 , "center_y": .18}
                font_size: "18sp"
                on_release: root.validate()
                # on_press: 
                #     app.root.current = "DeptSelection"
                background_color: 0,0,0,0
                canvas.before:
                    Color:
                        rgb: 0,1,1,1
                        # rgb: root.btn_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [8]
            MDLabel:
                id:errorLabel
                text: ""
                font_size: 15
                pos_hint: {"center_x": .85 , "center_y": .25}
                color: 1,0,0,1