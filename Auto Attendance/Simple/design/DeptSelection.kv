<DeptSelection>:
    name: "DeptSelection"
    id : DeptSelection
    faculty_welcome_label: faculty_welcome_label
    GridLayout:
        rows: 6
        cols: 1 
        Label:
            id: faculty_welcome_label
            text: ""
            font_size: 25

        Label:
            text:'Semester'
            font_size: 20
        GridLayout:
            rows: root.rowsForSem
            cols: 6
            id: displaySemButton
            Label:
                text:'Please Select Departments'

        Label:
            text:'Subject'
            font_size: 20
        GridLayout:
            rows: root.rowsForSub
            cols: 6
            id: displaySubButton
            Label:
                text:'Please select Semester'
           
        Button:
            text: 'Submit'
            size_hint: (.35,.45)
            pos_hint: {"center_x":0.5}          
            on_release: 
                root.validate()
                root.manager.transition.direction = "left"
