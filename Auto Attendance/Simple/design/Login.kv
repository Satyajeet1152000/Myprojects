<Login>:
    name: "Login"
    email : email
    password : password
    errorLabel: errorLabel
    RelativeLayout:
        BoxLayout:
            orientation:'vertical'
            size_hint: None,None
            size: 0.5 * root.width, 0.5 * root.height
            pos: 0.25 * root.width,  0.25 * root.height
            spacing: '10dp'
            Label:
                text: "Login"
                font_size: 30
            TextInput:
                id: email
                font_size:25
                multiline: False
            TextInput:
                id: password
                font_size:25
                multiline: False
                password: True
            Button:
                id: loginSubmit
                text: "Submit"
                # on_press: validate
                on_release: root.validate()

            Label:
                id:errorLabel
                text: ""
                font_size: 15
                color: 1 , 0 , 0 , 1
